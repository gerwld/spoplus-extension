{
  "name": "Spotify Classic theme",
  "description": "Bring back classic look to web version of Spotify. Choose what you want or not want to see, change theme, and many more.",
  "version": "1.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "/assets/icons/icon16.png",
    "32": "/assets/icons/icon32.png",
    "48": "/assets/icons/icon48.png",
    "128": "/assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/icons/icon16.png",
      "32": "/assets/icons/icon32.png",
      "48": "/assets/icons/icon48.png",
      "128": "/assets/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/bigger_navbar.css",
        "assets/css/classic_mode.css",
        "assets/css/premium_btns.css",
        "assets/css/static_aside.css",
        "assets/css/rect_avatars.css",
        "assets/css/block_images.css",
        "assets/css/block_videos.css",
        "assets/css/now_play_disable.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://google.com/"],
      "js": ["contentScript.js"],
      "css": ["assets/index.css"]
    }
  ],
  "permissions": ["activeTab", "storage", "webRequest"]
}
